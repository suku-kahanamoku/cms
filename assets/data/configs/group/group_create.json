{
    "title": "route.group",
    "color": "warning",
    "theme": "card",
    "method": "POST",
    "submitUrl": "/api/group/${route.params.id.0}",
    "fields": [
        {
            "name": "username",
            "label": "form.username",
            "required": true,
            "cols": {
                "xs": 12,
                "sm": 6
            }
        },
        {
            "name": "firstName",
            "label": "form.firstname",
            "required": true,
            "autocomplete": "given-name",
            "autofocus": true,
            "cols": {
                "xs": 12,
                "sm": 6
            }
        },
        {
            "name": "lastName",
            "label": "form.lastname",
            "required": true,
            "autocomplete": "family-name",
            "cols": {
                "xs": 12,
                "sm": 6
            }
        },
        {
            "type": "email",
            "name": "email",
            "label": "form.email",
            "required": true,
            "autocomplete": "email",
            "validation": {
                "msg": "form.msg.wrong_email",
                "pattern": "^\\w+([\\.-]?\\w+)*@\\w+([\\.-]?\\w+)*(\\.\\w{2,3})+$"
            },
            "cols": {
                "xs": 12,
                "sm": 6
            }
        }
    ]
}