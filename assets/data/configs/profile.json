{
    "title": "route.profile",
    "color": "primary",
    "theme": "card",
    "method": "PATCH",
    "restUrl": "/api/profile?where={\"id\":\"${route.params.id.0}\"}",
    "submitUrl": "/api/profile?where={\"id\":\"${route.params.id.0}\"}",
    "fields": [
        {
            "name": "firstname",
            "label": "form.firstname",
            "required": true,
            "autocomplete": "given-name",
            "autofocus": true
        },
        {
            "name": "lastname",
            "label": "form.lastname",
            "required": true,
            "autocomplete": "family-name"
        },
        {
            "type": "email",
            "name": "email",
            "label": "form.email",
            "required": true,
            "autocomplete": "email",
            "autofocus": true,
            "validation": {
                "msg": "form.msg.wrong_email",
                "pattern": "^\\w+([\\.-]?\\w+)*@\\w+([\\.-]?\\w+)*(\\.\\w{2,3})+$"
            }
        },
        {
            "type": "tel",
            "name": "phone",
            "label": "form.phone",
            "autocomplete": "tel"
        }
    ]
}